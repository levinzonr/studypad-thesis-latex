<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_onboarding"
            app:startDestination="@id/loginFragment2">

    <fragment
            android:id="@+id/loginFragment2"
            android:name="cz.levinzonr.studypad.presentation.screens.onboarding.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
        <action
                app:enterAnim="@animator/slide_left_enter"
                app:exitAnim="@animator/slide_left_exit"
                app:popEnterAnim="@animator/slide_right_enter"
                app:popExitAnim="@animator/slide_right_exit"
                android:id="@+id/action_loginFragment2_to_accountInfoFragment"
                app:destination="@id/accountInfoFragment"/>
        <action
                app:enterAnim="@animator/slide_left_enter"
                app:exitAnim="@animator/slide_left_exit"
                app:popEnterAnim="@animator/slide_right_enter"
                app:popExitAnim="@animator/slide_right_exit"
                android:id="@+id/action_loginFragment2_to_accountCreatedFragment"
                app:destination="@id/accountCreatedFragment"/>
    </fragment>


    <fragment
            android:id="@+id/accountInfoFragment"
            android:name="cz.levinzonr.studypad.presentation.screens.onboarding.signup.AccountInfoFragment"
            android:label="fragmne_info"
            tools:layout="@layout/fragment_account_info">
        <action
                app:enterAnim="@animator/slide_left_enter"
                app:exitAnim="@animator/slide_left_exit"
                app:popEnterAnim="@animator/slide_right_enter"
                app:popExitAnim="@animator/slide_right_exit"
                android:id="@+id/action_accountInfoFragment_to_credentialsInfoFragment"
                app:destination="@id/credentialsInfoFragment"/>
    </fragment>
    <fragment
            android:id="@+id/credentialsInfoFragment"
            android:name="cz.levinzonr.studypad.presentation.screens.onboarding.signup.CredentialsInfoFragment"
            android:label="fragment_credentials_info"
            tools:layout="@layout/fragment_credentials_info">
        <action
                app:enterAnim="@animator/slide_left_enter"
                app:exitAnim="@animator/slide_left_exit"
                app:popEnterAnim="@animator/slide_right_enter"
                app:popExitAnim="@animator/slide_right_exit"
                android:id="@+id/action_credentialsInfoFragment_to_accountCreatedFragment"
                app:destination="@id/accountCreatedFragment"/>
    </fragment>
    <fragment
            app:enterAnim="@animator/slide_left_enter"
            app:exitAnim="@animator/slide_left_exit"
            app:popEnterAnim="@animator/slide_right_enter"
            app:popExitAnim="@animator/slide_right_exit"
            android:id="@+id/accountCreatedFragment"
            android:name="cz.levinzonr.studypad.presentation.screens.onboarding.signup.AccountCreatedFragment"
            android:label="fragment_account_created"
            tools:layout="@layout/fragment_account_created"/>
    <activity
            android:id="@+id/mainActivity2"
            android:name="cz.levinzonr.studypad.presentation.screens.MainActivity"
            android:label="activity_main"
            tools:layout="@layout/activity_main"/>
    <action
            android:id="@+id/action_global_mainActivity2"
            app:destination="@id/mainActivity2"
            app:popUpToInclusive="true"/>

    <fragment
            android:id="@+id/universitySelectorFragment"
            android:name="cz.levinzonr.studypad.presentation.screens.selectors.university.UniversitySelectorFragment"
            android:label="fragment_university_selector"
            tools:layout="@layout/fragment_university_selector">
        <argument
                android:name="allowSuggestion"
                app:argType="boolean"
                android:defaultValue="true"/>
    </fragment>
    <action
            android:id="@+id/action_global_universitySelectorFragment"
            app:destination="@id/universitySelectorFragment"
            app:enterAnim="@animator/slide_left_enter"
            app:exitAnim="@animator/slide_left_exit"
            app:popEnterAnim="@animator/slide_right_enter"
            app:popExitAnim="@animator/slide_right_exit">
    </action>

</navigation>