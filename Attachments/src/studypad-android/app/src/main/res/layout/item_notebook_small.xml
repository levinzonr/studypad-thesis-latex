<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="Notebook name"
            android:id="@+id/notebookNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/space_big"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_big"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/space_big"/>

    <TextView
            android:id="@+id/notesCountTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="nnotes o"
            app:layout_constraintStart_toStartOf="@+id/notebookNameTv"
            app:layout_constraintTop_toBottomOf="@+id/notebookNameTv"
            android:layout_marginEnd="@dimen/space_big"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/space_big"/>

</androidx.constraintlayout.widget.ConstraintLayout>